#include <stdio.h>

int main()
{
    int n;
    printf("Input the size of array : ");
    scanf( "%d",&n);
    printf("Input %d elements in the array :",n);
    printf("\n");
    int arr[n];
    
    for(int i=0;i<n;i++){
        printf("element - %d: ",i);
        scanf("%d",&arr[i]);
    }
   
    
    int t=0;
    printf("The merged array in decending order is :\n");
    for(int k=0;k<n;k++){
        for(int l=k+1;l<n;l++){
        if(arr[k]>=arr[l]){
            t=arr[l];
            arr[l]=arr[k];
            arr[k]=t;
        }
        }
    }
        
       
    
    for(int k=0;k<n;k++){
       
        printf("%d ",arr[k]);
    }
   
    return 0;
}
