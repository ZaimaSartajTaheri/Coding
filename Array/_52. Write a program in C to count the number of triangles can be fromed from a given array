#include <bits/stdc++.h>
using namespace std;

int main()
{
   int n;
   cin>>n;
   int arr[n];
   for(int i=0;i<n;i++){
       cin>>arr[i];
   }
   sort(arr,arr+n);
   long long ans=0;
   for(int c=n-1;c>=2;c--){
       int a=0;
       int b=c-1;
       while(a<b){
           if(arr[a]+arr[b]>arr[c]){
              ans+=b-a;
              b--;
           }
           else{
               a++;
           }
       }
   }
   cout<<ans<<endl;
    return 0;
